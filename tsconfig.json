{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"allowImportingTsExtensions": true,
		"esModuleInterop": true,
		"declaration": true,
		"emitDeclarationOnly": true,
		"noEmit": false,
		"moduleResolution": "Bundler",
		"module": "ESNext",
		"target": "ES2024",
		"lib": ["ES2024"],
		"outDir": "./dist",
		"rootDir": "lib/"
	},
	"include": [
		"lib"
	],
	"exclude": [
		"dist",
	]
}

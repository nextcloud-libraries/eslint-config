{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"declaration": true,
		"esModuleInterop": true,
		"erasableSyntaxOnly": true,
		"rewriteRelativeImportExtensions": true,
		"resolveJsonModule": true,
		"moduleResolution": "NodeNext",
		"module": "NodeNext",
		"target": "ES2022",
		"lib": ["ES2022"],
		"outDir": "./dist",
		"rootDir": "lib/"
	},
	"include": [
		"lib"
	],
	"exclude": [
		"dist",
		"**/*.spec.ts",
		"**/*.test.ts"
	]
}
